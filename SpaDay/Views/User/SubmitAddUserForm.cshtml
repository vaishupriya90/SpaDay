
<h3 style="color:magenta">@ViewBag.error</h3>
<form method="post">
    <div class="form-group">
        <label>
            User Name
            <input type="text" name="userName" value="@ViewBag.usrName" class="form-control " />
        </label>
    </div>
    <div class="form-group">
        <label>
            Email Id
            <input type="text" name="email" value="@ViewBag.email" class="form-control" />
        </label>
    </div>
    <div class="form-group">
        <label>
            Password
            <input type="password" name="password" class="form-control" />
        </label>
    </div>
    <div class="form-group">
        <label>
            Confirm Password
            <input type="password" name="verify" class="form-control" />
        </label>
    </div>
    <input type="submit" value="Submit" class="btn-primary" />
</form>